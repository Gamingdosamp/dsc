    <script>
        function randomiseStars(){
            const elements = document.querySelectorAll('.star404');
            Array.from(elements).forEach((element, index) => {
                let rotation = Math.floor(Math.random() * 359);
                element.style.transform = `rotate(${rotation}deg)`;
                const rect = document.body.getBoundingClientRect();
                element.style.height = `${Math.floor(Math.random() * 15)}px`;
                element.style.width = `${Math.floor(Math.random() * 15)}px`;
                element.style.top = rect.top + Math.random() * rect.height + 'px';
                element.style.left = rect.left + Math.random() * rect.width + 'px';
            });
        }
